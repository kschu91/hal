{
    "name": "aeq/hal",
    "authors": [
        {
            "name": "Kevin Schu",
            "email": "kevin.schu@aoe.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.5.0",
        "ql/uri-template": "^1.1",
        "psr/http-message": "~1.0"
    },
    "suggest": {
        "guzzlehttp/guzzle": "if your want to use the build in GuzzleClientAdapter"
    },
    "autoload": {
        "psr-4": {
            "Aeq\\Hal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeq\\Hal\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.5"
    }
}